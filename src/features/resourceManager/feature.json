{
  "contributes": {
    "configuration": [
      {
        "title": "FT: Resource Manager",
        "properties": {
          "fusi-tools.resourceManager.enabled": {
            "type": "boolean",
            "default": true,
            "order": 0,
            "markdownDescription": "启用或禁用 **Resource Manager** 功能 (需要重启)。\n\n包括 `Copy Name`, `Generate Tree` 等命令。"
          },
          "fusi-tools.resourceManager.customCopyTemplates": {
            "type": "array",
            "default": [
              {
                "name": "阅读文档",
                "template": "请先阅读 {path}，了解项目的功能和结构"
              }
            ],
            "order": 1,
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "模板显示名称"
                },
                "template": {
                  "type": "string",
                  "description": "模板文本，使用 {path} 作为文件路径占位符"
                }
              },
              "required": [
                "name",
                "template"
              ]
            },
            "markdownDescription": "自定义复制模板列表。使用 `{path}` 作为文件路径占位符（会自动添加 @ 前缀）。"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "fusi-tools.copyName",
        "title": "Copy Name",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.copyRelativeName",
        "title": "@Copy Name",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.generateTree",
        "title": "Generate Tree",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.copyFile",
        "title": "Copy File",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.customCopy",
        "title": "自定义复制...",
        "category": "Fusi Tools"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "fusi-tools.copyName",
          "group": "fusi-tools@1",
          "when": "resourceScheme == file || resourceScheme == folder"
        },
        {
          "command": "fusi-tools.copyRelativeName",
          "group": "fusi-tools@2",
          "when": "resourceScheme == file || resourceScheme == folder"
        },
        {
          "command": "fusi-tools.customCopy",
          "group": "fusi-tools@2",
          "when": "resourceScheme == file || resourceScheme == folder"
        },
        {
          "command": "fusi-tools.copyFile",
          "group": "fusi-tools@3",
          "when": "resourceScheme == file && !explorerResourceIsFolder"
        },
        {
          "command": "fusi-tools.generateTree",
          "group": "fusi-tools@4",
          "when": "explorerResourceIsFolder"
        }
      ],
      "editor/title/context": [
        {
          "command": "fusi-tools.copyName",
          "group": "fusi-tools@1",
          "when": "resourceScheme == file"
        },
        {
          "command": "fusi-tools.copyRelativeName",
          "group": "fusi-tools@2",
          "when": "resourceScheme == file"
        },
        {
          "command": "fusi-tools.customCopy",
          "group": "fusi-tools@2",
          "when": "resourceScheme == file"
        },
        {
          "command": "fusi-tools.copyFile",
          "group": "fusi-tools@3",
          "when": "resourceScheme == file"
        }
      ]
    }
  }
}
