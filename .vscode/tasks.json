{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "npm run watch",
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "owner": "webpack",
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+),(\\d+)\\):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[webpack-cli\\] Compiler starting",
                    "endsPattern": "webpack .*? compiled successfully"
                }
            },
            "label": "npm: watch"
        },
        {
            "label": "打包扩展 (vsce package)",
            "type": "shell",
            "command": "vsce package",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}