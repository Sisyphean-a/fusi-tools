{
  "name": "fusi-tools",
  "publisher": "xixifu",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sisyphean-a/fusi-tools.git"
  },
  "displayName": "Fusi Tools",
  "description": "即插即用的 VS Code 效率工具箱 (Fusi Tools)",
  "version": "1.0.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Fusi Tools",
      "properties": {
        "fusi-tools.scratchpad.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用或禁用“随手记”功能"
        },
        "fusi-tools.aiCommit.apiKey": {
          "type": "string",
          "default": "",
          "description": "AI 服务的 API (例如 DeepSeek API Key)"
        },
        "fusi-tools.aiCommit.baseUrl": {
          "type": "string",
          "default": "https://api.deepseek.com",
          "description": "AI 服务的基础地址 (Base URL)"
        },
        "fusi-tools.aiCommit.model": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "快速响应模型名称 (用于生成简短描述，如 DeepSeek V3)"
        },
        "fusi-tools.aiCommit.reasonerModel": {
          "type": "string",
          "default": "deepseek-reasoner",
          "description": "深度推理模型名称 (用于生成详细分析，如 DeepSeek R1)"
        },
        "fusi-tools.aiCommit.enableDeepThinking": {
          "type": "boolean",
          "default": true,
          "description": "是否启用深度思考 (R1) 生成提交信息"
        },
        "fusi-tools.aiCommit.prompt": {
          "type": "string",
          "default": "",
          "description": "自定义系统提示词 (覆盖默认设置)"
        },
        "fusi-tools.smartTranslate.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用/禁用 智能翻译功能 (选中代码自动翻译/命名)"
        },
        "fusi-tools.smartTranslate.displayDuration": {
          "type": "number",
          "default": 5000,
          "description": "翻译结果显示时长(毫秒)"
        },
        "fusi-tools.smartTranslate.statusBarPosition": {
          "type": "string",
          "enum": [
            "left",
            "right"
          ],
          "default": "right",
          "description": "翻译状态栏位置"
        },
        "fusi-tools.projectFavorites.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用/禁用 项目常用文件 (Project Favorites) 功能"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectFavorites-container",
          "title": "常用文件",
          "icon": "$(star-full)"
        }
      ],
      "panel": [
        {
          "id": "scratchpad-container",
          "title": "Scratchpad",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "scratchpad-container": [
        {
          "type": "webview",
          "id": "scratchpad.view",
          "name": "随手记",
          "icon": "$(edit)",
          "when": "config.fusi-tools.scratchpad.enabled"
        }
      ],
      "scm": [
        {
          "id": "fusi-tools.aiCommitView",
          "name": "AI 提交助手",
          "icon": "$(sparkle)"
        }
      ],
      "projectFavorites-container": [
        {
          "id": "fusi-tools.projectFavorites.view",
          "name": "常用文件",
          "icon": "$(star-full)"
        }
      ]
    },
    "commands": [
      {
        "command": "fusi-tools.helloWorld",
        "title": "Demo: 你好世界"
      },
      {
        "command": "fusi-tools.previewSmartDiff",
        "title": "查看预处理",
        "icon": "$(eye)"
      },
      {
        "command": "fusi-tools.generateSmart",
        "title": "预处理后生成",
        "icon": "$(sparkle)"
      },
      {
        "command": "fusi-tools.generateDirect",
        "title": "直接生成",
        "icon": "$(rocket)"
      },
      {
        "command": "fusi-tools.applyCommit",
        "title": "应用提交信息",
        "icon": "$(check)"
      },
      {
        "command": "fusi-tools.toggleSmartTranslate",
        "title": "启用/禁用 智能翻译",
        "icon": "$(globe)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.projectFavorites.addFile",
        "title": "添加到常用",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.projectFavorites.moveToCategory",
        "title": "移动到分类",
        "icon": "$(arrow-right)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.projectFavorites.addCategory",
        "title": "新建分类",
        "icon": "$(new-folder)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.projectFavorites.removeFile",
        "title": "从常用中移除",
        "icon": "$(trash)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.projectFavorites.removeCategory",
        "title": "删除分类",
        "icon": "$(trash)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.projectFavorites.renameCategory",
        "title": "重命名分类",
        "icon": "$(edit)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.projectFavorites.renameFile",
        "title": "设置别名",
        "icon": "$(tag)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.projectFavorites.refresh",
        "title": "刷新",
        "icon": "$(refresh)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.copyName",
        "title": "复制文件名 (Copy Name)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.copyRelativeName",
        "title": "复制相对路径 (@Copy Name)",
        "category": "Fusi Tools"
      },
      {
        "command": "fusi-tools.generateTree",
        "title": "生成目录结构树 (Generate Tree)",
        "category": "Fusi Tools"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "fusi-tools.applyCommit",
          "when": "view == fusi-tools.aiCommitView && viewItem == commitItem",
          "group": "inline"
        },
        {
          "command": "fusi-tools.projectFavorites.renameCategory",
          "when": "view == fusi-tools.projectFavorites.view && viewItem == favoriteCategory",
          "group": "inline"
        },
        {
          "command": "fusi-tools.projectFavorites.removeCategory",
          "when": "view == fusi-tools.projectFavorites.view && viewItem == favoriteCategory",
          "group": "inline"
        },
        {
          "command": "fusi-tools.projectFavorites.renameFile",
          "when": "view == fusi-tools.projectFavorites.view && (viewItem == favoriteFile || viewItem == favoriteFolder)",
          "group": "inline"
        },
        {
          "command": "fusi-tools.projectFavorites.removeFile",
          "when": "view == fusi-tools.projectFavorites.view && (viewItem == favoriteFile || viewItem == favoriteFolder || viewItem == favoriteGhostFile)",
          "group": "inline"
        },
        {
          "command": "fusi-tools.projectFavorites.moveToCategory",
          "when": "view == fusi-tools.projectFavorites.view && (viewItem == favoriteFile || viewItem == favoriteFolder)",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "fusi-tools.previewSmartDiff",
          "when": "view == fusi-tools.aiCommitView",
          "group": "navigation@1"
        },
        {
          "command": "fusi-tools.generateSmart",
          "when": "view == fusi-tools.aiCommitView",
          "group": "navigation@2"
        },
        {
          "command": "fusi-tools.generateDirect",
          "when": "view == fusi-tools.aiCommitView",
          "group": "navigation@3"
        },
        {
          "command": "fusi-tools.projectFavorites.addCategory",
          "when": "view == fusi-tools.projectFavorites.view",
          "group": "navigation"
        },
        {
          "command": "fusi-tools.projectFavorites.refresh",
          "when": "view == fusi-tools.projectFavorites.view",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "fusi-tools.projectFavorites.addFile",
          "group": "7_modification",
          "when": "resourceScheme == file || resourceScheme == folder"
        },
        {
          "command": "fusi-tools.copyName",
          "group": "5_cutcopypaste",
          "when": "resourceScheme == file || resourceScheme == folder"
        },
        {
          "command": "fusi-tools.copyRelativeName",
          "group": "5_cutcopypaste",
          "when": "resourceScheme == file || resourceScheme == folder"
        },
        {
          "command": "fusi-tools.generateTree",
          "group": "7_modification",
          "when": "explorerResourceIsFolder"
        }
      ],
      "editor/title/context": [
        {
          "command": "fusi-tools.projectFavorites.addFile",
          "group": "7_modification",
          "when": "resourceScheme == file"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "ajv": "^8.17.1",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}