{
  "name": "fusi-tools",
  "publisher": "xixifu",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sisyphean-a/fusi-tools.git"
  },
  "displayName": "Fusi Tools",
  "description": "即插即用的 VS Code 效率工具箱 (Fusi Tools)",
  "version": "1.0.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Fusi Tools",
      "properties": {
        "fusi-tools.scratchpad.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用或禁用“随手记”功能"
        },
        "fusi-tools.aiCommit.apiKey": {
          "type": "string",
          "default": "",
          "description": "AI 服务的 API (例如 DeepSeek API Key)"
        },
        "fusi-tools.aiCommit.baseUrl": {
          "type": "string",
          "default": "https://api.deepseek.com",
          "description": "AI 服务的基础地址 (Base URL)"
        },
        "fusi-tools.aiCommit.model": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "快速响应模型名称 (用于生成简短描述，如 DeepSeek V3)"
        },
        "fusi-tools.aiCommit.reasonerModel": {
          "type": "string",
          "default": "deepseek-reasoner",
          "description": "深度推理模型名称 (用于生成详细分析，如 DeepSeek R1)"
        },
        "fusi-tools.aiCommit.enableDeepThinking": {
          "type": "boolean",
          "default": true,
          "description": "是否启用深度思考 (R1) 生成提交信息"
        },
        "fusi-tools.aiCommit.prompt": {
          "type": "string",
          "default": "",
          "description": "自定义系统提示词 (覆盖默认设置)"
        }
      }
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "scratchpad-container",
          "title": "Scratchpad",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "scratchpad-container": [
        {
          "type": "webview",
          "id": "scratchpad.view",
          "name": "随手记",
          "when": "config.fusi-tools.scratchpad.enabled"
        }
      ],
      "scm": [
        {
          "id": "fusi-tools.aiCommitView",
          "name": "AI 提交助手"
        }
      ]
    },
    "commands": [
      {
        "command": "fusi-tools.helloWorld",
        "title": "Demo: 你好世界"
      },
      {
        "command": "fusi-tools.previewSmartDiff",
        "title": "查看预处理",
        "icon": "$(eye)"
      },
      {
        "command": "fusi-tools.generateSmart",
        "title": "预处理后生成",
        "icon": "$(sparkle)"
      },
      {
        "command": "fusi-tools.generateDirect",
        "title": "直接生成",
        "icon": "$(rocket)"
      },
      {
        "command": "fusi-tools.applyCommit",
        "title": "应用提交信息",
        "icon": "$(check)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "fusi-tools.previewSmartDiff",
          "when": "view == fusi-tools.aiCommitView",
          "group": "navigation@1"
        },
        {
          "command": "fusi-tools.generateSmart",
          "when": "view == fusi-tools.aiCommitView",
          "group": "navigation@2"
        },
        {
          "command": "fusi-tools.generateDirect",
          "when": "view == fusi-tools.aiCommitView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "fusi-tools.applyCommit",
          "when": "view == fusi-tools.aiCommitView && viewItem == commitItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "ajv": "^8.17.1",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}